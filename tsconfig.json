{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "es6", 
      "dom"
    ],
    "types": [
      "reflect-metadata"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "lib": ["es2015"],
  "typedocOptions": {
    "entryPoints": ["lib/edf.ts"],
    "out": "docs"
  }
}